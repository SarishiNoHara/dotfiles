ws-icon-1 = 2;" deux "
ws-icon-2 = 3;" trois "
ws-icon-3 = 4;" quatre "
ws-icon-4 = 5;" cinq "
ws-icon-5 = 6;" six "
ws-icon-6 = 7;" sept "
ws-icon-7 = 8;" huit "
