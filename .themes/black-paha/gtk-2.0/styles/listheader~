	{
	image
	{
		function 			= FLAT_BOX
		state    			= NORMAL
		border			= {2,2,2,2}
                stretch         	= TRUE
		file				= "ListHeaders/pc-tree.png"
	}
	image
	{
		function 			= FLAT_BOX
		state    			= SELECTED
		border			= {2,2,2,2}
                stretch         	= TRUE
		file				= "ListHeaders/pc-tree-selected.png"
	}
  	}
}
